<!DOCTYPE html>
<html>
  <head>
    <title>PicUp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <ur class="nav d-flex align-items-center bg-light row sticky-top">
          <li class="nav-item col-md-3 text-center"><h1>PicUp</h1></li>
          <div class="col-md-9" id="links">
            <% if logged_in? %>
              <li class="nav-item col-md-1"><%= link_to "Logout", session_path(current_user.id), method: :delete ,class:"links btn" %></li>
              <li class="nav-item col-md-1"><%= link_to 'Pictures', pictures_path ,class:"links btn" %></li>
              <li class="nav-item col-md-1"><%= link_to 'New Pic', new_picture_path ,class:"links btn" %></li>
              <li class="nav-item col-md-1">
                <%= link_to  favorites_path, class:"links btn" do %>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                  </svg>
                <% end %>
              </li>
              <% if current_user.image && current_user.image.url %>
                <li class="nav-item col-md-1"><%= link_to image_tag(current_user.image.thumb.url), user_path(current_user.id) ,class:"links btn"%></li>
              <% else %>
                <li class="nav-item col-md-1"><%= link_to image_tag("default.png", :size => "30x30"), user_path(current_user.id) ,class:"links btn"%>
              <% end %>
            <% else %>
              <li class="nav-item col-md-1"><%= link_to "Login", new_session_path  ,class:"links btn"%></li>
              <li class="nav-item col-md-1"><%= link_to "Sign up", new_user_path  ,class:"links btn"%></li>
            <% end %>
          </div>
        </ur>
      <div class="yield_wrapper"><%= yield %></div>
    </div>
  </body>
</html>
