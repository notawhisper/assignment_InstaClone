<%= form_with(model: picture, local: true) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.label :image %></p>
    <%= image_tag(picture.image.thumb.url) if picture.image && picture.image.url %>
    <%= image_tag(picture.image.profile.url) if picture.image && picture.image.url %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <p><%= form.label :text %></p>
    <%= form.text_area :text %>
  </div>

  <br>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit "share", class: "btn btn-secondary" %>
  </div>
<% end %>
