<div class="pictures_bg">
  <div class="pictures_contents_wrapper">
    <p id="notice"><%= notice %></p>

    <h1>Pictures</h1>

    <!-- <table>
      <tbody> -->
        <% @pictures.each do |picture| %>

          <%= image_tag picture.image.picture_for_index.url %>
          <div class="text_wrapper_for_index">
            <p><%= picture.text %></p>
          </div>
          <p>Posted By: <%= picture.user.name %></p>
          <%= link_to 'Show', picture , class: "btn btn-secondary" %>
          <%= link_to 'Edit', edit_picture_path(picture), style: "#{'display:none' unless picture.user_id == current_user.id}", class: "btn btn-secondary" %>
          <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, style: "#{'display:none' unless picture.user_id == current_user.id}", class: "btn btn-secondary" %>
            <% unless picture.user_id == current_user.id %>
              <% if current_user.favorites.find_by(picture_id: picture.id).present? %>
                <p>
                  <%= link_to favorite_path(id: current_user.favorites.find_by(picture_id: picture.id).id),
                      method: :delete, class: 'btn btn-light' do %>
                      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                      </svg>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to favorites_path(picture_id: picture.id), method: :post, class: "btn btn-secondary" do %>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                    </svg>
                  <% end %>
                </p>
              <% end %>
            <% end %>
        <% end %>
      <!-- dy>
    </table> -->

    <br>

    <%= link_to 'New Picture', new_picture_path, class: "btn btn-secondary" %>
  </div>
</div>
